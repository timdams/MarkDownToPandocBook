<Window x:Class="Gitbook2PandocUI.SubSetSummary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gitbook2PandocUI"
        mc:Ignorable="d"
        Title="SubSetSummary" Height="450" Width="800">
    <Grid>

        
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button>Keep all</Button>
            <TextBlock> or click the subset you want from the list </TextBlock>
            <ListBox Name="lbSubset" SelectionChanged="lbSubset_SelectionChanged" Loaded="lbSubset_Loaded" ></ListBox>
        </StackPanel>
    </Grid>
</Window>
